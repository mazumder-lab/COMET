{
    "nb_epochs": 20,
    "train_batch_size": 1024,
    "val_batch_size": 1024,
    "grad_acc_steps": 1,
    "taskset_id": 1,
    "task_weights": [0.25,0.25,0.25,0.25],
    "optimizer": {
        "type": "Adam",
        "params": {
            "learning_rate": 5e-4
        }
    },
    "callbacks": [
        {
            "type": "EarlyStopping",
            "params": {
                "monitor": "val_loss",
                "patience": 15,
                "restore_best_weights": true
            }
        },
        {
            "type": "TerminateOnNaN",
            "params": {}
        }        
    ],
    "enforce_simplex_tol": 1e-2
}