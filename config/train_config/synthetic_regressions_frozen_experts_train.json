{
    "nb_epochs": 5,
    "train_batch_size": {
        "optuna_type": "suggest_categorical",
        "values": [128, 256, 512, 1024]
    },
    "val_batch_size": 1024,
    "grad_acc_steps": 1,
    "taskset_id": 12,
    "task_weights": [0.25,0.25,0.25,0.25],
    "optimizer": {
        "type": "SGD",
        "params": {
            "learning_rate": {
                "optuna_type": "suggest_categorical",
                "values": [1e-4, 5e-4, 1e-3, 5e-3, 1e-2, 5e-2, 1e-1]
            }
        }
    },
    "callbacks": [
        {
            "type": "EarlyStopping",
            "params": {
                "monitor": "val_loss",
                "patience": 15,
                "restore_best_weights": true
            }
        },
        {
            "type": "TerminateOnNaN",
            "params": {}
        }
    ],
    "enforce_simplex_tol": 1e-2
}